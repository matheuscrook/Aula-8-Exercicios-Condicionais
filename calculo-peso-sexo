<script>

var nome = prompt("Digite o seu nome: ");

var sexo = prompt("Digite o seu sexo: (M) para masculino e (F) para feminino: ");

var altura = Number(prompt("Digite a sua altura, exemplo: 1.80"));

if (sexo == "M") {

var pesom = 22*(altura*2);

alert("O seu peso ideal é de: " + pesom.toFixed(2) + " kg");

} else if (sexo == "F") {

pesof = 21*(altura*2);

alert("O seu peso ideal é de: " + pesof.toFixed(2) + " kg");

}

</script>

